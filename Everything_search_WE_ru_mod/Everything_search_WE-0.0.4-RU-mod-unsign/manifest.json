{
  "manifest_version": 2,
  "name": "Everything Search WE ru",
  "version": "0.0.4",
  "author": "Dr. Musti",
  "homepage_url": "http://bafrataksim.com",
  "developer": {
    "name": "Mustafa BAŞ",
    "url": "http://bafrataksim.com"
  },
  "applications": {
    "gecko": {
      "id": "@everything_search_we" ,
      "strict_min_version": "50.0"
    }
  },
  "description": "Поиск выбранного текста в Everything.",
   "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "permissions": [
    "<all_urls>",
    "menus",
    "contextMenus",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "background": {
    "scripts": [
      "common.js",
      "background.js"
    ]
  },
  "content_scripts": [{
    "js": [
      "common.js",
      "content.js"
    ],
    "matches": [
      "<all_urls>"
    ],
    "all_frames": true
  }],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon48.png"
    },
    "default_title": "Поиск в Everything"
  },
  "commands": {
    "command_action": {
      "suggested_key": {
        "default": "F8"
      }
    }
  }
}